# =============================================================================
# ONIE DataLab - Variables de Entorno
# =============================================================================
# Copia este archivo como .env y configura los valores según tu entorno

# =============================================================================
# CONFIGURACIÓN BÁSICA DE FLASK
# =============================================================================

# Aplicación principal
FLASK_APP=app.py

# Entorno de ejecución (development, testing, production)
FLASK_ENV=development

# Clave secreta para sesiones y CSRF (¡CAMBIAR EN PRODUCCIÓN!)
SECRET_KEY=dev-secret-key-change-in-production-please

# Host y puerto para el servidor de desarrollo
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================

# URL de la base de datos principal
# Ejemplos:
# SQLite: sqlite:///datalab.db
# PostgreSQL: postgresql://usuario:contraseña@localhost/datalab
# MySQL: mysql://usuario:contraseña@localhost/datalab
DATABASE_URL=sqlite:///datalab.db

# URL de la base de datos para testing
TEST_DATABASE_URL=sqlite:///:memory:

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Archivo de logs
LOG_FILE=logs/datalab.log

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================

# Configuración de cookies de sesión
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Tiempo de vida de la sesión (en horas)
SESSION_LIFETIME_HOURS=24

# =============================================================================
# CONFIGURACIÓN DE ARCHIVOS
# =============================================================================

# Tamaño máximo de archivos subidos (en MB)
MAX_CONTENT_LENGTH_MB=16

# Carpeta de uploads
UPLOAD_FOLDER=uploads

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================

# Habilitar modo debug (solo para desarrollo)
DEBUG=true

# Habilitar recarga automática
FLASK_DEBUG=1

# Habilitar toolbar de debug
DEBUG_TB_ENABLED=true
